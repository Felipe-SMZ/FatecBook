<div class="home-container">
    <img src="/img/logo.png" alt="FatecBook Logo" class="logo">
    <div class="home-header">
        <h1>Bem-vindo, {{user.nome}}</h1>
        <a href="/logout" class="btn-small">Sair</a>
    </div>

    <form action="/posts/create" method="POST" class="post-form">
        <textarea name="content" placeholder="O que você está pensando?" required></textarea>
        <button type="submit" class="btn">Postar</button>
    </form>

    <h3>Postagens:</h3>

    {{#each posts}}
    <div class="post">
        <strong>{{this.User.nome}}</strong> - {{formatDate this.updatedAt}}
        <p>{{{nl2br this.content}}}</p>
        {{#if (eq ../user.id this.UserId)}}
        <br><br>
        <div class="post-actions">
            <a href="/posts/{{this.id}}/edit"><button class="btn-small btn-danger">Editar</button></a>
            <form action="/posts/{{this.id}}/delete" method="POST" style="display:inline;">
                <button type="submit" class="btn-small btn-danger">Excluir</button>
            </form>
        </div>
        {{/if}}
    </div>
    {{/each}}

</div>